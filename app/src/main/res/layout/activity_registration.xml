<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    android:background="@drawable/floating_activity_background"
    android:gravity="center">
    <ImageView
        android:id="@+id/register_logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/register_name_and_team"
        android:layout_below="@id/register_logo"
        android:layout_centerVertical="true">
        <include
            layout="@layout/view_name_and_team"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/near_teams_count_text"
        android:text="GO"
        android:id="@+id/register_button"
        android:background="@drawable/oval_responsive_button"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="Catch PokÃ©mons together!"
        android:textAlignment="center"
        android:lines="1"
        android:maxLines="1"
        android:layout_gravity="center"
        android:textColor="@color/dark_red"
        android:layout_above="@id/register_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>